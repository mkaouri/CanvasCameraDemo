<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.canvascamerademo" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CanvasCameraDemo</name>
    <description>
        A sample Apache Cordova application that uses the canvas camera plugin.
    </description>
    <author email="contact@virtuoworks.com" href="http://www.virtuoworks.com">
      VirtuoWorks Team
    </author>
    <content src="index.html" />
	<access origin="*" />
    <plugin name="com.virtuoworks.cordova-plugin-canvascamera" spec="https://github.com/mkaouri/CanvasCameraPlugin.git" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<gap:config-file platform="ios" target="*-Info.plist" parent="NSCameraUsageDescription" overwrite="true">
		<string>Allow the app to use your camera</string>
	</gap:config-file>		
</widget>
